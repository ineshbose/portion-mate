{
  "name": "portion-mate",
  "version": "1.0.0",
  "main": "src/index.js",
  "private": true,
  "workspaces": [
    "src"
  ],
  "scripts": {
    "start": "expo start src",
    "android": "expo start src --android",
    "ios": "expo start src --ios",
    "web": "expo start src --web",
    "eject": "expo eject src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "lint-staged": "^12.1.7",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint src --fix"
    ],
    "src/**/*.py": [
      "black ."
    ]
  }
}
